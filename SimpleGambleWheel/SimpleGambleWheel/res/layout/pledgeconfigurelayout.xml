<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/ConfigureGameTypeViewGroup"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@layout/green_bg">
    
 	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" 
        android:orientation="horizontal" 
    	android:layout_alignParentBottom="true"
    	android:layout_alignParentLeft="true" >
 	
 		<com.xgadget.uimodule.CustomBitmapButton 
    		android:id="@+id/ConfigureGameTypeViewPrevButton"
 	    	android:layout_width="80dp"
 	    	android:layout_height="80dp"		
 	    	android:layout_gravity="center_horizontal"
    		android:layout_alignParentTop="true"
    		android:layout_alignParentLeft="true"/>
    
 		<com.xgadget.uimodule.CustomBitmapButton 
    		android:id="@+id/ConfigureGameTypeViewNextButton"
 	    	android:layout_width="80dp"
 	    	android:layout_height="80dp"		
 	    	android:layout_gravity="center_horizontal"
    		android:layout_alignParentTop="true"
    		android:layout_alignParentRight="true"/>
    
    </LinearLayout>
    
    <com.xgadget.uimodule.CustomBitmapButton
	    android:id="@+id/ConfigureGameTypeViewCloseButton"
		android:layout_height="80dp"
		android:layout_width="80dp"
		android:layout_gravity="center_horizontal"
    	android:layout_alignParentBottom="true"
    	android:layout_alignParentRight="true"/>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" 
        android:orientation="vertical" >

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_centerHorizontal="true"
        	android:layout_centerVertical="true" 
        	android:orientation="horizontal" >
     
    		<com.xgadget.SimpleGambleWheel.GameConfigureHeadGadget
	    	android:id="@+id/GameConfigureHeadView1"
			android:layout_height="126dp"
			android:layout_width="70dp"
			android:layout_gravity="center"
    		android:layout_alignParentTop="true"
			android:layout_centerHorizontal ="true" />

    		<com.xgadget.SimpleGambleWheel.GameConfigureHeadGadget
	    	android:id="@+id/GameConfigureHeadView2"
			android:layout_height="126dp"
			android:layout_width="70dp"
			android:layout_gravity="center"
    		android:layout_alignParentTop="true"
			android:layout_centerHorizontal ="true" />

    		<com.xgadget.SimpleGambleWheel.GameConfigureHeadGadget
	    	android:id="@+id/GameConfigureHeadView3"
			android:layout_height="126dp"
			android:layout_width="70dp"
			android:layout_gravity="center"
    		android:layout_alignParentTop="true"
			android:layout_centerHorizontal ="true" />

    		<com.xgadget.SimpleGambleWheel.GameConfigureHeadGadget
	    	android:id="@+id/GameConfigureHeadView4"
			android:layout_height="126dp"
			android:layout_width="70dp"
			android:layout_gravity="center"
    		android:layout_alignParentTop="true"
			android:layout_centerHorizontal ="true" />

		</LinearLayout>		
     
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    	android:id="@+id/GameConfigurePickerControlLayout"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_centerHorizontal="true"
        	android:layout_centerVertical="true" >
		
	  
	  		<com.xgadget.SimpleGambleWheel.GameConfigureNumberPicker 
    			android:id="@+id/GameConfigureNumberPicker"
				android:layout_height="160dp"
				android:layout_width="280dp"/>
		</LinearLayout>		
	</LinearLayout>		
	
</RelativeLayout>