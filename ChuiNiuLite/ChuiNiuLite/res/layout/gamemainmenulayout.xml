<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:id="@+id/MainMenuViewGroup"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
     
    <com.xgadget.uimodule.MyAbsoluteLayout
    android:id="@+id/GameMenuLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android">

	<com.xgadget.ChuiNiuLite.MainMenuView 
    	android:id="@+id/MenuView"
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

 		<com.xgadget.uimodule.CToolbarButton 
    		android:id="@+id/MenuSystemButton"
    		android:layout_width="32px"
    		android:layout_height="32px" />

 		<com.xgadget.uimodule.MainViewMenuItem 
    		android:id="@+id/MenuItemConfigure"
    		android:layout_width="36px"
    		android:layout_height="36px" />
 		<com.xgadget.uimodule.MainViewMenuItem 
    		android:id="@+id/MenuItemBackgroundSetup"
    		android:layout_width="36px"
    		android:layout_height="36px" />
 		<com.xgadget.uimodule.MainViewMenuItem 
    		android:id="@+id/MenuItemSoundSwitch"
    		android:layout_width="36px"
    		android:layout_height="36px" />
 		<com.xgadget.uimodule.MainViewMenuItem 
    		android:id="@+id/MenuItemScore"
    		android:layout_width="36px"
    		android:layout_height="36px" />
        
	</com.xgadget.uimodule.MyAbsoluteLayout>
    
    <com.mobclix.android.sdk.MobclixMMABannerXLAdView
    android:id="@+id/banner_adview_p_1"
    android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
    android:layout_height="50dip"
    android:layout_width="320dip"/>

    <com.mobclix.android.sdk.MobclixMMABannerXLAdView
    android:id="@+id/banner_adview_l_1"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_height="50dip"
    android:layout_width="320dip"/>

	
</RelativeLayout>